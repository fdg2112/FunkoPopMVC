
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">

    <div class="card-header">
        <i class="fas fa-users me-1"></i> Listado de Usuarios
    </div>

    <div class="card-body">

        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">Agregar Usuario</button>
            </div>
        </div>

        <hr />

        <table id="table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

            </tbody>
        </table>

    </div>
</div>

@section scripts{
    <script>
        var tabledata

        jQuery.ajax({
            url: '@Url.Action("GetUsersList","Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data)
            }
        })

        tabledata = $("#table").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("GetUsersList","Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Firstname" },
                { "data": "Lastname" },
                { "data": "Email" },
                {
                    "data": "Active", "render": function (value) {
                        if (value) return '<span class="badge bg-primary">SI</span>'
                        else return '<span class="badge bg-danger">NO</span>'
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-success btn-sm"><i class="fas fa-pen me-1"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash me-1"></i></button>',
                    "orderable": false,
                    "searchtable": false,
                    "width": "90px"
                }
            ]
        });

    </script>
    }